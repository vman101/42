#include "libft.h"

int	is_set(char c, char const *s)
{
	while(*s)
		if (c == *s++)
			return (1);
	return (0);
}

int find_end(char const *s1, char const *set)
{
	int i;
	int j;

	i = 0;
	j = 0;
	while(*s1)
	{
		while (*s1 && is_set(*s1, set))
		{
			i++;
			s1++;
		}
		while (*s1 && !is_set(*s1, set))
		{
			j++;
			s1++;
		}
		if (!*s1)
			j = 0;
		i += j;
	}
	return (i);
}

char	*ft_strrtrim(char *tmp, char const *set)
{
	char *back;

	back = tmp;
	while(*(tmp + 1))
		tmp++;
	while(is_set(*tmp, set))
		*tmp-- = 0;
	return (back);
}

char	*ft_strtrim(char const *s1, char const *set)
{
	if (!s1 || !set)
		return (NULL);
	while (is_set(*s1, set))
		s1++;
	return (ft_substr((char *)s1, 0, find_end(s1, set)));
}
